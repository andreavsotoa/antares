   <p id="notice"><%= notice %></p>

    <div class="inner">

        <div class="row">
            <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Subcategories
                </div>
                <div class="panel-body">

                  <%Rails.logger.info "SubCategorias #{@subcategories}"%>

                  <%if @subcategories.empty? %>

                  <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation" aria-hidden="true"></i>
                    <span class="sr-only">Alerta:</span>
                    Aún no existen subcategorías
                  </div>

                  <%else%>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                              <tr>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Categoría</th>
                                <th colspan="3"></th>
                              </tr>
                            </thead>
                            <tbody>
                                <% @subcategories.each do |subcategory| %>
                                  <tr>
                                    <td><%= subcategory.nombre %></td>
                                    <td><%= subcategory.descripcion %></td>
                                    <td><%= subcategory.category.nombre %></td>
                                    <td>
                                      <%=link_to  subcategory_path(subcategory) do %>
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                      <%end%>
                                    </td>
                                    <td>
                                      <%=link_to  edit_subcategory_path(subcategory) do %>
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                      <%end%>
                                    </td>
                                    <td><%= link_to subcategory, method: :delete, data: { confirm: '¿Estás seguro de eliminar la subcategoría: '+subcategory.nombre+' ?' }  do %>
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                      <%end%>
                                    </td>
                                  </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>

                  <%end%>
                   
                </div>
            </div>
            </div>
        </div>

    <br>

    <%= link_to 'Nueva SubCategoría', new_subcategory_path %>
</div>
