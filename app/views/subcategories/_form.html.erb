  <% if @categorias.empty? %>
  		<%= render 'shared/errors' %>
  <% else %>

  <% if @subcategory.errors.any? %>
	<div class="alert alert-danger">
	   <div class="error_explanation">
	      <ul>
	         <% @subcategory.errors.each do |attr,msg| %>
	         <li><%= "#{msg}" if @subcategory.errors[attr].first == msg %> </li>
	         <% end %>
	      </ul>
	   </div>
	</div>
<% end %>

<%= simple_form_for(@subcategory) do |f| %>

<%= f.error_notification %>

<%= f.input :nombre, label: 'Nombre', placeholder: "Coloque el nombre", wrapper_html: { class: 'username' } %>  

<%= f.input :descripcion, as: :text, label: 'Descripción', placeholder: "Coloque la descripción", :input_html => {:rows => 10} %> 

<%= f.association :category, label_method: :nombre, value_method: :id, include_blank: true, prompt: "Escoge la categoría" %>

<div class="form-actions" align="center">
   <%= f.button :submit, "Enviar", :class=> "btn btn-primary" %>
</div>
<% end %>
<% end %>
