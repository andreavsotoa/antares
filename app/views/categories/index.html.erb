           <p id="notice"><%= notice %></p>

            <div class="inner">

                <div class="row">
                    <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Categories
                        </div>
                        <div class="panel-body">

                          <%Rails.logger.info "Categorias #{@categories}"%>

                          <%if @categories.empty? %>

                          <div class="alert alert-warning" role="alert">
                            <i class="fa fa-exclamation" aria-hidden="true"></i>
                            <span class="sr-only">Alerta:</span>
                            Aún no existen categorías
                          </div>

                          <%else%>

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                      <tr>
                                        <th>Nombre</th>
                                        <th>Descripcion</th>
                                        <th colspan="3"></th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <% @categories.each do |category| %>
                                          <tr>
                                            <td><%= category.nombre %></td>
                                            <td><%= category.descripcion %></td>
                                            <td>
                                              <%=link_to  category_path(category) do %>
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                              <%end%>
                                            </td>
                                            <td>
                                              <%=link_to  edit_category_path(category) do %>
                                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                              <%end%>
                                            </td>
                                            <td><%= link_to category, method: :delete, data: { confirm: '¿Estás seguro de eliminar la categoría: '+category.nombre+' ?' }  do %>
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                              <%end%>
                                            </td>
                                          </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>

                          <%end%>
                           
                        </div>
                    </div>
                    </div>
                </div>

            <br>

            <%= link_to 'New Category', new_category_path %>
        </div>
        <script>
         $(document).ready(function () {
             $('#dataTables-example').dataTable();
         });
        </script>
