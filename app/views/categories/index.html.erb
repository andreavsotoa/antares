<p id="notice"><%= notice %></p>

<h1>Categories</h1>

    <%Rails.logger.info "Categorias #{@categories}"%>

    <%if @categories.empty? %>

    <div class="alert alert-warning" role="alert">
      <i class="fa fa-exclamation" aria-hidden="true"></i>
      <span class="sr-only">Alerta:</span>
      Aún no existen categorías
    </div>

    <%else%>
        <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.nombre %></td>
            <td><%= category.descripcion %></td>
            <td>
              <%=link_to  category_path(category) do %>
                <i class="fa fa-eye" aria-hidden="true"></i>
              <%end%>
            </td>
            <td>
              <%=link_to  edit_category_path(category) do %>
                <i class="fa fa-pencil" aria-hidden="true"></i>
              <%end%>
            </td>
            <td><%= link_to category, method: :delete, data: { confirm: '¿Estás seguro de eliminar la categoría: '+category.nombre+' ?' }  do %>
                <i class="fa fa-trash" aria-hidden="true"></i>
              <%end%>
            </td>
          </tr>
        <% end %>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
